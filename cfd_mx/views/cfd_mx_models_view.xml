        <record id="alta_catalogos_cfdi_view" model="ir.ui.view">
             <field name="name">Alta Catalogos CFDI</field>
             <field name="model">cfd_mx.alta.catalogos.wizard</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Alta Catalogos CFDI">
                    <separator string="Alta Catalogos CFDI" colspan="4"/>
                    <newline/>
                    <separator string ="" colspan="4"/>
                    <group colspan="2" col="4">
                         <button special="cancel" string="Cancel" icon="gtk-cancel"/>
