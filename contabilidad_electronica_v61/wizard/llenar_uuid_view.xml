<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="wizard_llenar_uuid_view_form">
            <field name="name">llenar.uuid.view.wiz.form</field>
            <field name="model">contabilidad_electronica.wizard.llenar.uuid</field>
            <field name="arch" type="xml">
                <form string="Llenar UUID">
                    <label colspan="4" string="Esta accion llenara el campo de UUID en todas las polizas de facturas y notas de credito
                    que aun no lo tengan lleno. Para continuar presione OK" />
                    <separator string ="" colspan="4"/>
                    <group colspan="2" col="4">
                        <button type="special" special="cancel" string="Cerrar" icon="gtk-cancel"/>
                        <button type="object" name="action_llenar_uuid" string="OK" icon="gtk-execute"/>
                    </group>
                </form>
            </field>
        </record>
    
        <record id="action_llenar_uuid_wiz" model="ir.actions.act_window">
            <field name="name">Llenar UUIDs</field>            
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contabilidad_electronica.wizard.llenar.uuid</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="wizard_llenar_uuid_view_form"/>
            <field name="target">new</field>
        </record>

        
        <menuitem 
            id="menu_llenar_uuid_wiz" 
            parent="menu_configuracion_contabilidad_electronica"
            action="action_llenar_uuid_wiz"/>

        
    </data>
</openerp>    


