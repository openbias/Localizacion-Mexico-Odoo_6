<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id="view_certificate_form" model="ir.ui.view">
            <field name="name">view_certificate_form</field>
            <field name="model">contabilidad.electronica.certificate</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Certificates">
                    <group colspan="4">
                        <field name="company_id"/>
                    </group>

                    <group colspan="2" col="2" groups="base.group_extended" name="archivos">
                        <separator string="Archivos" colspan="2" />
                        <field name="cer" on_change="onchange_cer(cer)" colspan="2" />
                        <field name="key" colspan="2" />
                        <field name="key_password" password="True" colspan="2"/>
                    </group>
                    <group colspan="2" col="2">
                        <separator string="InformaciÃ³n certificado" colspan="2" />
                        <field name="serial" />
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>


                    <group colspan="2" col="2" groups="base.group_extended" name="archivos">
                        <separator string="Archivos en formato PEM" colspan="2"/>
                        <button name="button_generate_pem" string="Generar archivos PEM" type="object" icon="gtk-execute" colspan="2" />
                        <field name="cer_pem" colspan="2" />
                        <field name="key_pem" colspan="2" />
                    </group>
                    <group colspan="2" col="2" groups="base.group_extended" name="archivos">
                        <separator string="Archivo en formato PFX" colspan="2" />
                        <button name="button_generate_pfx" string="Generar archivo PFX" type="object" icon="gtk-execute" colspan="2" />
                        <field name="pfx" colspan="2" />
                        <field name="pfx_password" password="True" colspan="2" />
                    </group>
                </form>
            </field>
        </record>
        
        
        <record id="view_certificate_tree" model="ir.ui.view">
            <field name="name">view_certificate_tree</field>
            <field name="model">contabilidad.electronica.certificate</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Certificates">
                    <field name="serial"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_certificate_tree" model="ir.actions.act_window">
            <field name="name">Certificados SAT</field>
            <field name="res_model">contabilidad.electronica.certificate</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_certificate_tree"/>
        </record>
      
        <menuitem action="action_certificate_tree" 
                id="menu_res_cfd_certificate" sequence="50" 
                parent="base.menu_res_company_global" />
                
    </data>
</openerp>